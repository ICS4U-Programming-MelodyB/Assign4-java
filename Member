/**
 * Keeps track of what book the member has signed out,
 * and how much money they owe.
 *
 * @author  Melody Berhane
 * @version 1.0
 *
 * @since 2023-06-14.
 */
public class Members {
    // Class attributes
    private static int nextCardNumber = 1;

    // Instance attributes
    private String name;
    private int cardNumber;
    private Book bookSignedOut;
    private String dueDate;
    private String currentDate;
    private boolean isOverdue;
    private int amountOwed;

    // Constructor
    public Members(String name) {
        this.name = name;
        this.cardNumber = nextCardNumber;
        this.bookSignedOut = null;
        this.dueDate = null;
        this.currentDate = null;
        this.isOverdue = false;
        this.amountOwed = 0;
        nextCardNumber++;
    }

    // Setter methods
    public void signOutBook(Book book, String dueDate) {
        this.bookSignedOut = book;
        this.dueDate = dueDate;
        this.currentDate = getCurrentDate();
    }

    public void returnBook() {
        this.bookSignedOut = null;
        this.dueDate = null;
        this.currentDate = null;
        this.isOverdue = false;
        this.amountOwed = 0;
    }

    // Getter methods
    public String getName() {
        return name;
    }

    public int getCardNumber() {
        return cardNumber;
    }

    public Book getBookSignedOut() {
        return bookSignedOut;
    }

    public String getDueDate() {
        return dueDate;
    }

    public String getCurrentDate() {
        return currentDate;
    }

    public boolean getIsOverdue() {
        return isOverdue;
    }

    public int getAmountOwed() {
        return amountOwed;
    }

    // Other methods
    public void calculateOverdue() {
        if (currentDate.compareTo(dueDate) > 0) {
            isOverdue = true;
            int daysOverdue = /* Calculate days difference between currentDate and dueDate */;
            amountOwed = daysOverdue * overdue_fee_per_day;
        }
    }

    public String getCurrentDate() {
        // Implementation to get the current date goes here
        return null;
    }
}
